<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1>Survery <%= survey.Title %> Questions</h1>
            <form class="form" method="post">
              <div class="form-group">
                <!-- Question 1-->
                <label for="NameTextField">Question 1</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="title" value="<%= survey.Title %>" required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Response 1</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Book Price" name="price" value="<%= survey.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Response 2</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author" value="<%= survey.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Response 3</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Book Genre" name="genre" value="<%= survey.Genre %>"  required>
              </div>
              
              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/survey" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
